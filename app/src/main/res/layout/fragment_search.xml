<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SearchFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:id="@+id/topSearchBar"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:insetTop="0dp"
                style="@style/MyButton"
                android:insetBottom="0dp"
                android:backgroundTint="@color/colorPrimary"
                android:drawableLeft="@drawable/arrow_left_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPLORE"
                android:textColor="#000000"
                android:fontFamily="@font/nudmotoya_maru"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="20dp"/>
        </RelativeLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topSearchBar"
            android:layout_margin="10dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:startIconDrawable="@drawable/search_24"
            app:startIconTint="#A1A0A2"
            style="@style/EditTexts"
            android:hint="Find People and Clubs"
            android:textColorHint="#A1A0A2">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E3E1D9"
                android:textSize="15sp"
                android:fontFamily="@font/nudmotoya_maru"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/searchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="People to Follow"
            android:textAllCaps="true"
            android:textColor="#6E664E"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:layout_below="@+id/searchField"
            android:fontFamily="@font/nudmotoya_maru"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendedPeopleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F5F0"
            tools:itemCount="3"
            android:layout_below="@+id/searchText"
            tools:listitem="@layout/people_to_follow_user"
            android:elevation="1dp"/>
        <Button
            android:id="@+id/showMorePeopleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show more people"
            android:textColor="#6E664E"
            android:backgroundTint="#E6E3D6"
            android:elevation="2dp"
            android:textAllCaps="false"
            android:layout_below="@+id/recommendedPeopleView"
            style="@style/MyButton"
            android:padding="10dp"
            android:textStyle=""
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:drawableTint="#6E664E"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/findConversaionsTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find conversaions about..."
            android:textAllCaps="true"
            android:textColor="#6E664E"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:layout_below="@+id/showMorePeopleBtn"
            android:fontFamily="@font/nudmotoya_maru"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/findConversaionsTxt"
            android:columnCount="2">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffffff"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                android:layout_columnWeight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🏆 Sports"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/nudmotoya_maru"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tennis, Formula 1, Soccer, c"
                        android:textColor="#000000"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/nudmotoya_maru"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffffff"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                android:layout_columnWeight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/nudmotoya_maru"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tennis, Formula 1, Soccer, c"
                        android:textColor="#000000"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/nudmotoya_maru"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffffff"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                android:layout_columnWeight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/nudmotoya_maru"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tennis, Formula 1, Soccer, c"
                        android:textColor="#000000"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/nudmotoya_maru"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffffff"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                android:layout_columnWeight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/nudmotoya_maru"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tennis, Formula 1, Soccer, c"
                        android:textColor="#000000"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/nudmotoya_maru"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </RelativeLayout>
</FrameLayout>